<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>Boat Fuel Tracker - Legacy J2EE</display-name>
    <description>
        Legacy J2EE application with intentional anti-patterns for Konveyor testing
    </description>

    <!-- Servlet 2.5 configuration (anti-pattern) -->
    <!-- Konveyor will flag: Old servlet API, should use @WebServlet annotations -->
    <servlet>
        <servlet-name>FuelUpServlet</servlet-name>
        <servlet-class>com.boatfuel.servlet.FuelUpServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>FuelUpServlet</servlet-name>
        <url-pattern>/fuelups</url-pattern>
    </servlet-mapping>

    <!-- Session configuration with timeout -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- EJB references (EJB 2.x style) -->
    <!-- Konveyor will flag: EJB 2.x references, should use @EJB injection -->
    <ejb-ref>
        <ejb-ref-name>ejb/FuelUpService</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>com.boatfuel.ejb.FuelUpServiceHome</home>
        <remote>com.boatfuel.ejb.FuelUpServiceRemote</remote>
    </ejb-ref>

    <!-- Resource reference with hardcoded JNDI -->
    <!-- Konveyor will flag: Hardcoded datasource reference -->
    <resource-ref>
        <res-ref-name>jdbc/BoatFuelTrackerDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <!-- Environment entries (hardcoded configuration) -->
    <!-- Konveyor will flag: Configuration in web.xml, should use external config -->
    <env-entry>
        <env-entry-name>config/exportPath</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>C:\BoatFuel\exports</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>config/logPath</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>/var/log/boatfuel</env-entry-value>
    </env-entry>

    <!-- Security constraint (old style) -->
    <!-- Should use Java EE Security API instead -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/fuelups/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/loginError.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>user</role-name>
    </security-role>

    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>

</web-app>
